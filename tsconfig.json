{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "resources/ts",
		"outDir": "public/js",
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
			"resources/ts/types/global",
			"resources/ts/types/zod"
		],
		"allowJs": true,
		"checkJs": false,
		"baseUrl": "resources/ts",
		"paths": {
			"@global/*": ["types/global/*"],
			"@zod/*": ["types/zod/*"]			
		}
	},
	"include": ["resources/ts/**/*"],
	"exclude": ["node_modules"]
  }
  